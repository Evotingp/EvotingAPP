<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".VoterLoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_NewUserV">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edd_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:paddingBottom="24dp"
                    android:textColorHint="#f0f0f0"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edd_DOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:hint="Date of Birth "
                    android:inputType="date"
                    android:paddingBottom="24dp"
                    android:textColorHint="#f0f0f0"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edd_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="24dp"
                    android:textColorHint="#f0f0f0"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edd_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:paddingBottom="24dp"
                    android:textColorHint="#f0f0f0"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edd_Add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:hint="Address"
                    android:inputType="textPostalAddress"
                    android:paddingBottom="24dp"
                    android:textColorHint="#f0f0f0"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edd_City"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:hint="City"
                    android:inputType="text"
                    android:paddingBottom="24dp"
                    android:textColorHint="#f0f0f0"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edd_State"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:hint="State"
                    android:inputType="text"
                    android:paddingBottom="24dp"
                    android:textColorHint="#f0f0f0"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edd_Pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingBottom="24dp"
                    android:textColorHint="#f0f0f0"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edd_Pass2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:paddingBottom="24dp"
                    android:textColorHint="#f0f0f0"
                    android:textSize="16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#4effffff"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/txt_NewUserV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:background="#1fffffff"
        android:gravity="center"
        android:padding="16dp"
        android:text="Already have an account? Sign In!"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</RelativeLayout>