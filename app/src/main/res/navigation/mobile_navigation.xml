<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.evoting.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_go_voting"
        android:name="com.example.evoting.ui.voterelectionlist.VoterElectionlistFragment"
        android:label="Voting"
        tools:layout="@layout/voterelectionlist_row" />

    <fragment
        android:id="@+id/navigation_electionresult"
        android:name="com.example.evoting.ui.electionresult.ElectionResultFragment"
        android:label="Election Result"
        tools:layout="@layout/fragment_election_result" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.evoting.ui.voterprofile.VoterProfileFragment"
        android:label="My Profile"
        tools:layout="@layout/fragment_voter_profile" />
</navigation>